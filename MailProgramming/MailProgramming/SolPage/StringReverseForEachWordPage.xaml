<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MailProgramming.SolPage.StringReverseForEachWordPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry
                x:Name="myEntry"
                HorizontalOptions="FillAndExpand"/>
            <Label
                x:Name="InputLabel"
                HorizontalOptions="FillAndExpand"/>
            <Label
                x:Name="OutputLabel"
                HorizontalOptions="FillAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>